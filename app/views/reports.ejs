<%- include('./partials/header.ejs') %>
<h1>Reports</h1>

<th>All them reports</th>
<tr>
    <% if (reports && reports.rowCount > 0) { %>
    <% reports.forEach((report) => { %>
        <td><%= report.report_date %></td>
    <% }); %>
    <% } %>
</tr><br><br>

<h2>Add reports</h2>

<label form="morning"><b>Morning</b></label>
<form action="/behavior/reporting" method="POST" id="morning"><br>

    <label for="sleep_duration">Sleep duration (h)</label>
    <input type="number" name="sleep_duration" id="sleep_duration" min="0" max="24" step="0.1"><br><br>

    <label for="sleep_quality">Sleep quality (between 1-5)</label>
    <input type="number" name="sleep_quality" id="sleep_quality" min="1" max="5"><br><br>
    
    <label for="generic_mood_morning">Generic mood (between 1-5)</label>
    <input type="number" name="generic_mood_morning" id="generic_mood_morning" min="1" max="5"><br><br>
    
    <input type="hidden" name="morning_or_evening" value="morning">
    <input type="submit" value="Submit">
</form>

<br><br><br>

<label form="evening"><b>Evening</b></label>
<form action="/behavior/reporting" method="POST" id="evening"><br>

    <label for="time_spent_on_sports_n_exercise">Time spent on sports and exercise (h)</label>
    <input type="number" name="time_spent_on_sports_n_exercise" id="time_spent_on_sports_n_exercise" min="0" max="24" step="0.1"><br><br>

    <label for="time_spent_studying">Time spent studying (h)</label>
    <input type="number" name="time_spent_studying" id="time_spent_studying" min="0" max="24" step="0.1"><br><br>

    <label for="regularity_of_eating">Regularity of eating (between 1-5)</label>
    <input type="number" name="regularity_of_eating" id="regularity_of_eating" min="1" max="5"><br><br>

    <label for="quality_of_eating">Quality of eating (between 1-5)</label>
    <input type="number" name="quality_of_eating" id="quality_of_eating" min="1" max="5"><br><br>

    <label for="generic_mood_evening">Generic mood (between 1-5)</label>
    <input type="number" name="generic_mood_evening" id="generic_mood_evening" min="1" max="5"><br><br>

    <input type="hidden" name="morning_or_evening" value="evening">
    <input type="submit" value="Submit">
</form>

<%- include('./partials/footer.ejs') %>