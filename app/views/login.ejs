<%- include('./partials/header.ejs') %>
<h1>Login</h1><br>
<p>Fill in and submit the following form to login and use our awesome Self-Moneytoring(tm) web app.</p>
<a href="/auth/register">If you haven't already registered to this site, please, go to the registeration page.</a><br>
<p id="otherwise">Otherwise go ahead, fill the god damn form already!</p>


<form action="/auth/login" method="post">
    <fieldset>
        <div class="form-group">

            <label for="email">Email</label>
            <input class="form-control" type="email" name="email" value="" id="email">
            <%- include('./partials/errors.ejs', { errors: errors, attribute: 'email'}) %>
        
            <label for="password">Password</label>
            <input class="form-control" type="password" name="password" id="password">
            <%- include('./partials/errors.ejs', { errors: errors, attribute: 'password'}) %>
        
            <input class="btn btn-primary" type="submit" value="Submit">

        </div>
    </fieldset>
</form><br><br>
<%- include('./partials/errors.ejs', { errors: errors, attribute: 'authentication'}) %>
<%- include('./partials/footer.ejs') %>

